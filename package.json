{
	"name": "@ncoded/npm-package-template",
	"version": "1.0.0",
	"description": "NPM Package Template in TypeScript with Jest, Commitizen, Husky, Prettier, Standard-Version and XO",
	"main": "./lib/bundle.cjs",
	"types": "./lib/index.d.ts",
	"exports": {
		"import": "./lib/bundle.mjs",
		"require": "./lib/bundle.cjs"
	},
	"files": [
		"lib/bundle*",
		"lib/*.d.ts",
		"lib/*.tsbuildinfo"
	],
	"repository": {
		"type": "git",
		"url": "git@github.com:ap0h/npm-package-template.git"
	},
	"scripts": {
		"build": "tsc && rollup --config rollup.config.ts --configPlugin swc3",
		"typedefs": "tsc",
		"commit": "cz",
		"format": "xo --fix **/*{.ts,.js,.json}",
		"format:ci": "xo **/*.ts *.ts",
		"lintStaged": "lint-staged",
		"prepare": "husky install",
		"test": "jest --coverage",
		"xo": "xo",
		"release": "semantic-release --no-ci",
		"docs": "typedoc --out public ./src"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"xo": {
		"prettier": true,
		"semicolon": false,
		"ignores": [
			"rollup.config.ts"
		],
		"rules": {
			"unicorn/prefer-module": "off",
			"import/extensions": "off",
			"no-template-curly-in-string": "off",
			"n/prefer-global/process": "off",
			"@typescript-eslint/consistent-type-definitions": [
				"error",
				"interface"
			]
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/gitlab": "^12.0.5",
		"@semantic-release/npm": "^10.0.4",
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.76",
		"@swc/jest": "^0.2.28",
		"@types/jest": "^29.5.3",
		"@types/node": "^20.4.9",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^8.0.3",
		"jest": "^29.6.2",
		"lint-staged": "^13.2.3",
		"prettier": "^3.0.1",
		"rollup": "^3.28.0",
		"rollup-plugin-dts": "^5.3.1",
		"rollup-plugin-swc3": "^0.9.1",
		"semantic-release": "^21.0.7",
		"ts-jest": "^29.1.1",
		"tsc": "^2.0.4",
		"typedoc": "^0.24.8",
		"typescript": "^5.1.6",
		"xo": "^0.55.1"
	},
	"dependencies": {}
}
